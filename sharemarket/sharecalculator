<body>

  <div class="container">
    <h2>NEPSE Share Buy Calculator</h2>
    
    <label for="quantity">Quantity</label>
    <input type="number" id="quantity" placeholder="Enter number of shares" />

    <label for="rate">Rate per Share (Rs.)</label>
    <input type="number" id="rate" placeholder="Enter rate per share" />

    <button onclick="calculate()">Calculate</button>

    <div class="result" id="result" style="display:none;"></div>
  </div>

  <script>
    function getBrokerCommissionRate(amount) {
      if (amount <= 50000) return 0.0036;
      if (amount <= 500000) return 0.0033;
      if (amount <= 2000000) return 0.0031;
      if (amount <= 10000000) return 0.0027;
      return 0.0024;
    }

    function calculate() {
      const qty = parseFloat(document.getElementById("quantity").value);
      const rate = parseFloat(document.getElementById("rate").value);

      if (!qty || !rate || qty <= 0 || rate <= 0) {
        alert("Please enter valid quantity and rate.");
        return;
      }

      const grossAmount = qty * rate;
      const commissionRate = getBrokerCommissionRate(grossAmount);
      const brokerCommission = grossAmount * commissionRate;

      const sebonFee = grossAmount * 0.00015; // 0.015%
      const dpCharge = 25; // flat

      const total = grossAmount + brokerCommission + sebonFee + dpCharge;

      const result = `
        <p>Gross Amount: Rs. ${grossAmount.toFixed(2)}</p>
        <p>Broker Commission (${(commissionRate * 100).toFixed(2)}%): Rs. ${brokerCommission.toFixed(2)}</p>
        <p>SEBON Fee (0.015%): Rs. ${sebonFee.toFixed(2)}</p>
        <p>DP Charge: Rs. ${dpCharge.toFixed(2)}</p>
        <hr>
        <p>Total Payable Amount: <strong>Rs. ${total.toFixed(2)}</strong></p>
      `;

      document.getElementById("result").innerHTML = result;
      document.getElementById("result").style.display = "block";
    }
  </script>

</body>
</html>
